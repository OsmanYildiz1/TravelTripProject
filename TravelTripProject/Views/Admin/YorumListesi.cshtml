@using TravelTripProject.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
   
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td>@item.Blog.Baslik</td>
            <th><a href="/Admin/YorumSil/@item.Id" class="btn btn-danger">Sil</a></th>
            <th><a href="/Admin/YorumGetir/@item.Id" class="btn btn-warning">Güncelle</a></th>
        </tr>
    }

</table>

